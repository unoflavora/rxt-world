// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

model Series {
  id        Int   @id @map("_id") 
  price     StockPrice[]
  createdAt DateTime
}

model StockPrice {
  id        Int   @id @map("_id") 
  date     DateTime
  data     Float[]
  Series   Series?  @relation(fields: [seriesId], references: [id])
  seriesId Int?
}

model MarketData {
  id        Int   @id @map("_id") 
  price Float @default(0)
  spread      Float
  dailyVolume Int
  percentageVolume Float @default(0)
  lastTraded  DateTime
  lastUpdated DateTime
  tradeUrl    String
  logoUrl String
  exchange Exchange @relation(fields: [exchangeName], references: [id])
  exchangeName String @unique
}

model Exchange {
  id  String     @id
  data MarketData?
}
