generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Series {
  id        Int          @id @default(autoincrement())
  price     StockPrice[]
  createdAt DateTime
}

model StockPrice {
  id       Int      @id @default(autoincrement())
  date     DateTime
  data     Float[]
  Series   Series?  @relation(fields: [seriesId], references: [id])
  seriesId Int?
}

model MarketData {
  id Int @id @default(autoincrement())
  market String
  spread Float
  dailyVolume Int
  lastTraded DateTime
  lastUpdated DateTime
  tradeUrl String
}
